<h1> <%= @schoolhouse.name %> <%= @schoolhouse.level %> Schoolhouse</h1>
<br />
<h4>Enrollment: <%= @schoolhouse.enrollment %></h4>


<% if @classrooms.any? %>
		<div class="row">
			<% @classrooms.each do |classroom| %>
		        <div class="col s12 m6 l4">
		          <div class="card">
		            <div class="card-content">
		              <h6><%= classroom.name %></h6>
		            </div>
		            <div class="card-action">
		              <%= link_to 'View Classroom', schoolhouse_classroom_path(@schoolhouse, classroom) %>
		            </div>
		          </div>
		        </div>
			<% end %>
		</div>
<% else %>
  <h4>No classrooms, please add one!</h4>
<% end %>


<%= link_to 'Edit Schoolhouse', edit_schoolhouse_path(@schoolhouse) %>
<%= link_to 'Add a New Classroom', new_schoolhouse_classroom_path(@schoolhouse) %>
<%= link_to 'View All Classrooms', schoolhouse_classrooms_path(@schoolhouse) %>
<%= link_to 'Delete Schoolhouse', schoolhouse_path(@schoolhouse), method: :delete, class: "waves-effect waves-light red lighten-1 btn", data: {confirm: 'Sure you want to delete this? schoolhouse'} %>
